" ~/.gvimrc

set columns=81
set guifont=DejaVu\ Sans\ Mono\ for\ Powerline:h14,Menlo:h14
set guioptions-=a
set guioptions+=e
set guioptions+=i
set guioptions-=m
set guioptions+=r
set guioptions-=T
set guioptions-=L
set icon
set lines=1000
set mousehide
set showtabline=2

set background=light
syntax on
colorscheme nkraft
